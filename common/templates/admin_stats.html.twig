{% extends 'layout.html.twig' %}

{% block page_head_title %}admin | popcorn.sipgate.net{%endblock %}
{% block page_head_description %}Popcorn-Abende bei sipgate - Admin{%endblock %}
{% block page_head_keywords %}sipgate,kino,film,popcorn{%endblock %}
{% block page_head_og_title %}admin | popcorn.sipgate.net{% endblock %}
{% block page_head_og_image %}{% endblock %}
{% block page_head_og_description %}Popcorn-Abende bei sipgate - Admin{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-xs-12">
			<h1>Top 10</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="5%">Nr.</th>
						<th width="65%">Titel</th>
						<th width="10%">Jahr</th>
						<th width="10%">Vote</th>
						<th width="10%">Votecount</th>
					</tr>
				</thead>
				<tbody>
				{% for movie in top10movies %}
					<tr id="movierow_{{ movie.id }}">
						<td align="right">{{ loop.index }}.</td>
						<td><a href="http://www.imdb.com/title/{{ movie.imdb_id }}/" target="_blank"{% if movie.active == 0 %} class="movie_inactive"{% endif %}>{{ movie.title }}</a></td>
						<td>{{ movie.year }}</td>
						<td>{{ movie.vote }}</td>
						<td>{{ movie.votecount }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
			<hr />
			<h1>Flop 10</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="5%">Nr.</th>
						<th width="65%">Titel</th>
						<th width="10%">Jahr</th>
						<th width="10%">Vote</th>
						<th width="10%">Votecount</th>
					</tr>
				</thead>
				<tbody>
				{% for movie in flop10movies %}
					<tr id="movierow_{{ movie.id }}">
						<td align="right">{{ loop.index }}.</td>
						<td><a href="http://www.imdb.com/title/{{ movie.imdb_id }}/" target="_blank"{% if movie.active == 0 %} class="movie_inactive"{% endif %}>{{ movie.title }}</a></td>
						<td>{{ movie.year }}</td>
						<td>{{ movie.vote }}</td>
						<td>{{ movie.votecount }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
			<hr />
			<h1>Zusagen</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="5%">Nr.</th>
						<th width="55%">Email</th>
						<th width="40%">Timestamp</th>
					</tr>
				</thead>
				<tbody>
				{% for commitment in commitments %}
					<tr>
						<td align="right">{{ loop.index }}</td>
						<td>{{ commitment.email }}</td>
						<td>{{ commitment.timestamp|date("d.m.Y H:i:s") }}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
			<div class="text-center">
				<button id="btnDropCommitments" class="btn btn-danger">Alle Zusagen l√∂schen</button>
			</div>
			<hr />
			<h1>Users</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="5%">Nr.</th>
						<th width="85%">Email</th>
						<th width="10%">Aktiviert?</th>
					</tr>
				</thead>
				<tbody>
				{% for user in users %}
					<tr>
						<td align="right">{{ loop.index }}</td>
						<td>{{ user.email }}</td>
						<td>{% if user.activation_hash %}Nein{% else %}Ja{% endif %}</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		
		</div>
	</div>
{% endblock %}

{% block js %}
<script src="/js/admin.js"></script>
{% endblock %}
